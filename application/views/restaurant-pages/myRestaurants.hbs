{{!-- Html for Restaurant User that displays all the approval status of their restaurant --}}
{{!-- Author(s): Melisa and Emily --}}

<head>
    <link rel="stylesheet" href="/stylesheets/restaurant-pages-css/myRestaurants.css">
    <title>My Restaurants</title>
</head>

<div class="container">
    <h1>My Restaurants</h1>
    <br>
    
    {{!-- contains the restaurant list and rejection reasons --}}
    <div id="restaurantlist-and-rejection-container">
        {{!-- contains the restaurant list and message saying your restaurants will be registered w/i 24 hours --}}
        <div id="restaurant-message-container">
            <p class="message"f>Your restaurant will be registered within 24 hours of applying.</p>
            <div id="restaurant-container">
                {{!-- partial that will display the restaurant an registered restaurant user has applied for --}}
                {{!-- {{> restaurantcard}} --}}
                {{#each restaurantName}}
                    {{> restaurantcard this}}
                {{/each}}
                
            </div>
        </div>
        {{!-- reasons why your restaurant was rejected --}}
        <div id="rejection-reasons">
            <p>Reasons why your restaurant maybe rejected:</p>
            <ul class="rejection-list">
                <li>Same Restaurant Applied Again</li>
                <li>Nonsensical Names</li>
                <li>Nonsensical Descriptions</li>
                <li>Nonsensical Images</li>
                <li>Invalid Address</li>
                <li>Invalid Delivery Time</li>
                <li>Invalid Prices</li>
            </ul>
        </div>
    </div>
    
    
    <button class="register-btn" onclick="location.href='/restaurantApplication'">Register Another Restaurant</button> 
{{!-- end of container div --}}
</div>

            
        
