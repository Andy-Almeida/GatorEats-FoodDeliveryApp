{{!-- user's ticket for each food --}}
{{!-- Author(s): David and Emily --}}
<div class="ticket">
    <image class="ticket-image" src={{images}}></image>
    <div class="ticket-details">

                Name:  {{name}}<br>
                <p class="item-price">Price: $ {{price}} </p><br> 

             
 Qtn:<input type="number" id="quantity" name="quantity" value={{quantity}} min = "1" max="5">
               
    </div>
    <button id="trash-ticket-{{@index}}" class="trash-ticket" name="delete">Trash</button>
</div>

<script>
   document.getElementById("trash-ticket-{{@index}}").addEventListener('click', (e) => {
       if (e.target.name === 'delete') {
           e.target.parentElement.remove();
       }
   });
</script>