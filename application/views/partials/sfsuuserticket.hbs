<div class="ticket">
    <image class="ticket-image" src="/images/uploads/dominos.jpg"></image>
    <div class="ticket-details">

                Name:  <br>
                Price: $$$ <br> 

             
 Qtn:<input type="number" id="quantity" name="quantity" value="1" min = "1" max="5">
               
    </div>
    <button id="trash-ticket-{{@index}}" class="trash-ticket" name="delete">Trash</button>
</div>

<script>
   document.getElementById("trash-ticket-{{@index}}").addEventListener('click', (e) => {
       if (e.target.name === 'delete') {
           e.target.parentElement.remove();
       }
   });
</script>